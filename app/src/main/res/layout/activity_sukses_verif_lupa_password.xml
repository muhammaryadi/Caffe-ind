<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuksesVerifLupaPassword"
    android:background="@color/primary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/watermark_coffee"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="150dp"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:background="@drawable/suksespassword"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:background="@drawable/background"
            android:backgroundTint="@color/white"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lupa password sukses"
                android:textAlignment="center"
                android:textColor="#BF3148"
                android:textStyle="bold"
                android:textSize="25dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Keren! Pengaturan verifikasi lupa password telah berhasil diaktifkan. Kamu sekarang tidak perlu khawatir lupa password"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnbacksettingsukseslupa"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background1"
                android:backgroundTint="#F2C029"
                android:text="Kembali ke Pengaturan Akun"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>