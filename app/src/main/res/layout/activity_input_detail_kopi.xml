<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputDetailKopi"
    android:background="@color/primary"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/watermarkinputkopi">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:background="@drawable/background3">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/back_button_red"
                    android:layout_gravity="center"
                    android:gravity="center">
                </Button>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:src="@drawable/caffeindred"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Caffe-Tracker"
                        android:textColor="#BF3148"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="27dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!--pilihan kopi-->
        <LinearLayout
            android:padding="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/imgKopiDetail"
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:src="@drawable/kopi_in_touch_speciality_fococlipping_standard"/>

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="170dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kamu memilih"
                    android:textSize="17sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/namaKopi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="KOPinTOUCH Speciality"
                    android:textColor="@color/white"
                    android:textStyle= "bold"
                    android:textSize="27dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <!--input detail kopi-->
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:background="@drawable/background1"
            android:backgroundTint="@color/white">

            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Berikan kami detail yang kamu minum"
                android:textColor="#BF3148"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Berapa Cup yang anda minum?"
                    android:textColor="@color/primary"/>
                <Spinner
                    android:id="@+id/spinnerKuantiti1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Less sugar/Normal sugar/Extra sugar"
                    android:textColor="@color/primary"/>
                <Spinner
                    android:id="@+id/spinnerGula"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bahan tambahan"
                    android:textColor="@color/primary"/>
                <Spinner
                    android:id="@+id/spinnerBahan"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            </LinearLayout>



            <Button
                android:id="@+id/btnsubmitdatakopi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/background1"
                android:backgroundTint="#F2C029"
                android:textSize="18dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white">
            </Button>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>